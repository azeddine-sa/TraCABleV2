<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="40dp">

    <Button
        android:id="@+id/btn_home_consult"
        style="@style/AppBtn"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:drawableTop="@drawable/loupe"
        android:paddingTop="20dp"
        android:text="@string/consult" />

    <Button
        android:id="@+id/btn_home_design_top"
        style="@style/AppBtnDesign"
        android:layout_width="185dp"
        android:layout_height="77.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp" />

    <Button
        android:id="@+id/btn_home_libocc"
        style="@style/AppBtn"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="262.5dp"
        android:layout_marginEnd="0dp"
        android:drawableTop="@drawable/libocc"
        android:paddingTop="50dp"
        android:text="@string/statut" />

    <Button
        android:id="@+id/btn_home_encheres"
        style="@style/AppBtn"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="175dp"
        android:drawableTop="@drawable/enchere"
        android:paddingTop="20dp"
        android:text="@string/encheres" />

    <Button
        android:id="@+id/btn_home_activity"
        style="@style/AppBtn"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="350dp"
        android:drawableTop="@drawable/stop"
        android:paddingTop="20dp"
        android:text="@string/activity" />

    <Button
        android:id="@+id/btn_home_station"
        style="@style/AppBtn"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87.5dp"
        android:layout_marginEnd="0dp"
        android:drawableTop="@drawable/station"
        android:paddingTop="40dp"
        android:text="@string/station" />

    <Button
        android:id="@+id/btn_home_design_bottom"
        android:layout_width="185dp"
        android:layout_height="77.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="437.5dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bouton_design_arrondi" />

</RelativeLayout>